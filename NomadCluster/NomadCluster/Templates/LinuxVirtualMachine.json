{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "adminUsername": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "User name for the Virtual Machine."
      }
    },
    "dnsNameForPublicIP": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Globally unique DNS Name for the Public IP used to access the Virtual Machine."
      }
    },
    "StorageAccount01Type": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "StorageAccount02Type": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "StorageAccount03Type": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "VirtualMachine01Name": {
      "type": "string",
      "minLength": 1
    },
    "VirtualMachine02Name": {
      "type": "string",
      "minLength": 1
    },
    "VirtualMachine03Name": {
      "type": "string",
      "minLength": 1
    }
  },
  "variables": {
    "addressPrefix": "10.0.0.0/16",
    "subnetName": "Subnet",
    "subnetPrefix": "10.0.0.0/24",
    "publicIPAddressType": "Dynamic",
    "virtualNetworkName": "MyVNET",
    "VirtualMachineUbuntuOSVersion": "14.04.2-LTS",
    "imagePublisher": "Canonical",
    "imageOffer": "UbuntuServer",
    "NomadInstallScript01ScriptFileName": "NomadInstallScript01.sh",
    "NomadInstallShellURL": "https://raw.githubusercontent.com/TsuyoshiUshio/NomadClusterARM/master/NomadCluster/NomadCluster/CustomScripts/NomadInstallScript01.sh",

    "vhdStorageName": "[concat('sa01', uniqueString(resourceGroup().id))]",
    "OSDiskName": "osdiskforlinuxsimple",
    "VirtualMachine01VmSize": "Standard_D1",
    "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', variables('subnetName'))]",
    "vhdStorageContainerName": "vhds",
    "nicName": "[concat(parameters('VirtualMachine01Name'), 'NetworkInterface')]",

    "StorageAccount02Name": "[concat('sa02', uniqueString(resourceGroup().id))]",
    "VirtualMachine02OSDiskName": "VirtualMachine02OSDisk",
    "VirtualMachine02VmSize": "Standard_D1",
    "VirtualMachine02VnetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
    "VirtualMachine02SubnetRef": "[concat(variables('VirtualMachine02VnetID'), '/subnets/', variables('subnetName'))]",
    "VirtualMachine02StorageAccountContainerName": "vhds",
    "VirtualMachine02NicName": "[concat(parameters('VirtualMachine02Name'), 'NetworkInterface')]",

    "StorageAccount03Name": "[concat('sa03', uniqueString(resourceGroup().id))]",
    "VirtualMachine03OSDiskName": "VirtualMachine03OSDisk",
    "VirtualMachine03VmSize": "Standard_D1",
    "VirtualMachine03VnetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
    "VirtualMachine03SubnetRef": "[concat(variables('VirtualMachine03VnetID'), '/subnets/', variables('subnetName'))]",
    "VirtualMachine03StorageAccountContainerName": "vhds",
    "VirtualMachine03NicName": "[concat(parameters('VirtualMachine03Name'), 'NetworkInterface')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('vhdStorageName')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "StorageAccount01"
      },
      "properties": {
        "accountType": "[parameters('StorageAccount01Type')]"
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('dnsNameForPublicIP')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "PublicIPAddress"
      },
      "properties": {
        "publicIPAllocationMethod": "[variables('publicIPAddressType')]",
        "dnsSettings": {
          "domainNameLabel": "[parameters('dnsNameForPublicIP')]"
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('virtualNetworkName')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "VirtualNetwork"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('subnetName')]",
            "properties": {
              "addressPrefix": "[variables('subnetPrefix')]"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('nicName')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "VirtualMachine01Nic"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('dnsNameForPublicIP'))]",
        "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('dnsNameForPublicIP'))]"
              },
              "subnet": {
                "id": "[variables('subnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('VirtualMachine01Name')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "VirtualMachine01"
      },
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('vhdStorageName'))]",
        "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('VirtualMachine01VmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('VirtualMachine01Name')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('VirtualMachineUbuntuOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "osdisk",
            "vhd": {
              "uri": "[concat('http://', variables('vhdStorageName'), '.blob.core.windows.net/', variables('vhdStorageContainerName'), '/', variables('OSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "NomadInstallScript01",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('VirtualMachine01Name'))]"
          ],
          "tags": {
            "displayName": "NomadInstallScript01"
          },
          "properties": {
            "publisher": "Microsoft.OSTCExtensions",
            "type": "CustomScriptForLinux",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[variables('NomadInstallShellURL')]"
              ],
              "commandToExecute": "bash NomadInstallScript01.sh"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('StorageAccount02Name')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [ ],
      "tags": {
        "displayName": "StorageAccount02"
      },
      "properties": {
        "accountType": "[parameters('StorageAccount02Type')]"
      }
    },
    {
      "name": "[variables('VirtualMachine02NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
      ],
      "tags": {
        "displayName": "VirtualMachine02Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('VirtualMachine02SubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('VirtualMachine02Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('StorageAccount02Name'))]",
        "[concat('Microsoft.Network/networkInterfaces/', variables('VirtualMachine02NicName'))]"
      ],
      "tags": {
        "displayName": "VirtualMachine02"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('VirtualMachine02VmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('VirtualMachine02Name')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('VirtualMachineUbuntuOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "VirtualMachine02OSDisk",
            "vhd": {
              "uri": "[concat('http://', variables('StorageAccount02Name'), '.blob.core.windows.net/', variables('VirtualMachine02StorageAccountContainerName'), '/', variables('VirtualMachine02OSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VirtualMachine02NicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "NomadInstallScript02",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('VirtualMachine02Name'))]"
          ],
          "tags": {
            "displayName": "NomadInstallShellScript02"
          },
          "properties": {
            "publisher": "Microsoft.OSTCExtensions",
            "type": "CustomScriptForLinux",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[variables('NomadInstallShellURL')]"
              ],
              "commandToExecute": "bash NomadInstallScript01.sh"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('StorageAccount03Name')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [ ],
      "tags": {
        "displayName": "StorageAccount03"
      },
      "properties": {
        "accountType": "[parameters('StorageAccount03Type')]"
      }
    },
    {
      "name": "[variables('VirtualMachine03NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
      ],
      "tags": {
        "displayName": "VirtualMachine03Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('VirtualMachine03SubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('VirtualMachine03Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('StorageAccount03Name'))]",
        "[concat('Microsoft.Network/networkInterfaces/', variables('VirtualMachine03NicName'))]"
      ],
      "tags": {
        "displayName": "VirtualMachine03"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('VirtualMachine03VmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('VirtualMachine03Name')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('VirtualMachineUbuntuOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "VirtualMachine03OSDisk",
            "vhd": {
              "uri": "[concat('http://', variables('StorageAccount03Name'), '.blob.core.windows.net/', variables('VirtualMachine03StorageAccountContainerName'), '/', variables('VirtualMachine03OSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VirtualMachine03NicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "NomadInstallScript03",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('VirtualMachine03Name'))]"
          ],
          "tags": {
            "displayName": "NomadInstallScript03"
          },
          "properties": {
            "publisher": "Microsoft.OSTCExtensions",
            "type": "CustomScriptForLinux",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[variables('NomadInstallShellURL')]"
              ],
              "commandToExecute": "bash NomadInstallScript01.sh"
            }
          }
        }
      ]
    }
  ]
}
